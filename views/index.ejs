<%- include('partials/headerIndex') -%>

<main class="container">
  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-warning"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
    messages.info.forEach( el => { %>
    <div class="alert alert-warning"><%= el.msg %></div>
  <% }) %> <% } %>
  
</main>
<section class="cardContainer">
  <section class="card">
    <section class="logInFormContainer">
      <h1 class="titleSpan">SHIOTSUKI INTERIOR</h1>
      <form action="/" method="POST">
        <label for="exampleInputEmail1" class="input input-bordered flex items-center gap-2 logInFormInput "><span class="text-gray-400">
          Email</span>
          <input type="email" class="grow" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"
          />
        </label>
        <label for="exampleInputPassword1" class="input input-bordered flex items-center gap-2 logInFormInput "><span class="text-gray-400">
          Password</span>
        <input type="password" class="grow" id="exampleInputPassword1" name="password"/>
        </label>
        <button type="submit" class="btn bg-gray-900 hover:bg-gray-500 text-white submitButton">Submit</button>
        <section class="memberCreateContainer">
          <span class="text-gray-400">Don't have an account?</span>
          <a class="link link-primary text-gray-700 hover:text-gray-950" href="/signup"> Signup here</a>
        </section>
      </form>
    </section>  
  </section>
  <section class="logInImg">
  </section> 
</section>
