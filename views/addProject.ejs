<%- include('partials/header') -%>
<div class="flex flex-col items-center justify-center h-screen addProjectContainer">

  <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
      <div
        class="absolute inset-0 bg-gradient-to-r from-yellow-800 to-yellow-950 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
      </div>
      <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
        <div class="max-w-md mx-auto">
          <div>
            <h1 class="text-2xl font-semibold text-center">Add a Project</h1>
          </div>
          <div class="divide-y divide-gray-200">
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                <div class="relative">
                  <input autocomplete="off" id="title" name="title" type="text" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="title" />
                  <label for="title" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Title</label>
                </div>
            
                <div class="relative">
                  <input autocomplete="off" id="address" name="address" type="text" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="address" />
                  <label for="address" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Address</label>
                </div>
                
                <div class="relative">
                  <input autocomplete="off" id="time" name="time" type="time" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="time" />
                  <label for="time" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Time of assembly</label>
                </div>
                <div class="relative">
                  <input autocomplete="off" id="assignedDate" name="assignedDate" type="date" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="assignedDate" />
                  <label for="assignedDate" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Date</label>
                </div>
                <div class="relative">
                  <select autocomplete="off" id="status" name="status" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="status">
                    <option value="" disabled selected hidden>Status</option>
                    <option value="pending">Pending</option>
                    <option value="ongoing">Ongoing</option>
                    <option value="completed">Completed</option>
                  </select>
                  <label for="status" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Status</label>
                </div>
                <label for="caption" class="input input-bordered flex flex-col gap-1 logInFormInput capForm">
                  <span class="text-gray-700">Caption</span>
                  <textarea class="form-control resize-none h-40" id="caption" name="caption"></textarea>
              </label>              
              
              <label for="imgUpload" class="input input-bordered flex items-center gap-2 logInFormInput hide">
                <input type="file" class="form-control btn btn-primary bg-yellow-900 hover:bg-yellow-800 border-none px-4 py-2 rounded" id="imageUpload" name="file">
              </label>

              <div class="relative text-slate-50">
                <button class="btn btn-primary bg-yellow-900 hover:bg-yellow-800 border-none">Submit</button>
              </div>
                
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  
